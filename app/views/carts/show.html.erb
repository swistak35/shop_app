<%= form_for current_order, url: cart_url do |f| %>
	<table class='table'>
		<tr>
			<th>Name</th>
			<th>Quantity</th>
			<th>Price</th>
			<th>Total</th>
			<th></th>
		</tr>
		<% current_order.items.each do |item| %>
			<tr>
				<td><%= link_to item.product_name, item.product %></td>
				<td>
					<%= f.fields_for :items, item do |fi| %>
						<%= fi.text_field :quantity, class: 'small_input' %>
					<% end %>
				</td>
				<td><%= item.price %>$</td>
				<td><%= item.cost %>$</td>
			</tr>
		<% end %>
		<tr>
			<td colspan='3'></td>
			<td><%= current_order.total_cost %>$</td>
		</tr>
	</table>

	<%= f.submit "Update cart", class: 'btn btn-info' %>
	<%= button_to "Proceed", root_path, class: 'btn btn-primary' %>
<% end %>