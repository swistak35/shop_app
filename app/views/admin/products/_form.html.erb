<% unless @product.errors.empty? %>
	<div class='alert alert-error'>
		Errors when tried to save product:
		<ul>
			<% @product.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class='control-group'>
	<%= f.label :name, class: 'control-label' %>
	<div class='controls'>
		<%= f.text_field :name, required: true %>
	</div>
</div>

<div class='control-group'>
	<%= f.label :desc, class: 'control-label' %>
	<div class='controls'>
		<%= f.text_area :desc, rows: 7, required: true %>
	</div>
</div>

<div class='control-group'>
	<%= f.label :price, class: 'control-label' %>
	<div class='controls'>
		<%= f.text_field :price, required: true, pattern: '\d+\.\d{2}' %>
	</div>
</div>

<div class='control-group'>
	<%= f.label :category_id, class: 'control-label' %>
	<div class='controls'>
		<%= f.select :category_id, options_from_collection_for_select(Category.sorted, :id, :name, @product.category_id), include_blank: true %>
	</div>
</div>