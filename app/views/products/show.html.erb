<div class="hero-unit">
  <h2><%= @product.name %></h2>
  <h3>Price: <%= @product.price %>$</h3>
  <p><%= @product.desc %></p>
  <%= form_tag add_product_cart_path, class: 'form-inline' do %>
  	<%= hidden_field_tag :id, @product.id %>
  	<%= label_tag :quantity %>: 
  	<%= number_field_tag :quantity, 1, min: 1, class: 'small_input' %>
  	<%= submit_tag "Add to Cart", class: 'btn btn-primary' %>
  <% end %>
  <%= link_to "Back", :back, class: 'btn btn-info' %>
</div>